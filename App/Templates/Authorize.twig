{% extends 'Header.twig' %}

{% block content %}

    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.css">

    <form action="./login" method="post" class="p-5">

        <div class="form-group">
            <label for="login_authorize">Логин</label>
            <input type="text" class="form-control" name="login_authorize" placeholder="Введите логин">
        </div>

        <div class="form-group">
            <label for="pass_authorize">Пароль</label>
            <input type="password" class="form-control" name="pass_authorize" placeholder="Введите пароль">
        </div>

        <button id="submit_button" type="submit" name="submit_button" class="btn btn-primary">Вход</button>

    </form>

{% endblock  %}