{% extends 'Header.twig' %}

{% block content %}

    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.css">

    <form action="./taskCreated" method="post" class="p-5">

        <div class="form-group">
            <label for="login_cTask">Login</label>
            <input type="text" class="form-control" name="login_cTask" id="login_cTask" placeholder="Введите логин">
        </div>

        <div class="form-group">
            <label for="email_cTask">E-Mail</label>
            <input type="text" class="form-control" name="email_cTask" id="email_cTask" placeholder="Введите E-Mail">
        </div>

        <div class="form-group">
            <label for="pass_cTask">Task</label>
            <input type="text" class="form-control" name="task_cTask" id="task_cTask" placeholder="Введите задачу">
        </div>

        <button id="submit_button" type="submit" name="submit_button" class="btn btn-primary">Create</button>

    </form>

{% endblock  %}